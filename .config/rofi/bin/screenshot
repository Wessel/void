#!/usr/bin/env bash

## Author  : Aditya Shakya
## Mail    : adi1090x@gmail.com
## Github  : @adi1090x
## Twitter : @adi1090x

rofi_command="rofi -theme $HOME/.config/rofi/configs/screenshot.rasi"

# Options
screen=""
area=""
window=""

# Variable passed to rofi
options="$window\n$area\n$screen"

chosen="$(echo -e "$options" | $rofi_command -p 'scrot' -dmenu -selected-row 1)"
case $chosen in
    $screen)
		sleep 1; scrot 'screenshot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f ~/Images/screenshots/ ; feh ~/Images/screenshots/$f'
        ;;
    $area)
		scrot -s 'screenshot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f ~/Images/screenshots/ ; feh ~/Images/screenshots/$f'
        ;;
    $window)
		sleep 1; scrot -u 'screenshot_%Y-%m-%d-%S_$wx$h.png' -e 'mv $f ~/Images/screenshots/ ; feh ~/Images/screenshots/$f'
        ;;
esac

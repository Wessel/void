rofi \
	-show drun \
	-modi drun,run \
	-no-lazy-grab \
	-scroll-method 0 \
	-drun-match-fields all \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal alacritty \
	-theme $HOME/.config/rofi/configs/launcher.rasi
